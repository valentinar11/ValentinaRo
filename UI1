    <!-- JavaScript for this tab -->
    <script>
        // Section toggle functionality
        document.querySelectorAll('.section-toggle').forEach(toggle => {
            toggle.addEventListener('click', function() {
                const section = this.closest('.form-section');
                const content = section.querySelector('.section-content');
                const icon = this.querySelector('.toggle-icon');
                
                if (content.style.display === 'none') {
                    content.style.display = 'block';
                    icon.style.transform = 'rotate(0deg)';
                } else {
                    content.style.display = 'none';
                    icon.style.transform = 'rotate(-90deg)';
                }
            });
        });

        // Line items functionality
        let lineItemCount = 1;

        function addLineItem() {
            lineItemCount++;
            const tbody = document.getElementById('line-items-tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${lineItemCount}</td>
                <td><input type="text" class="table-input" placeholder="Enter item description"></td>
                <td><input type="text" class="table-input" placeholder="Code"></td>
                <td>
                    <select class="table-select">
                        <option>Each</option>
                        <option>Box</option>
                        <option>Kg</option>
                        <option>Meter</option>
                        <option>Liter</option>
                        <option>Hour</option>
                        <option>Day</option>
                        <option>Month</option>
                    </select>
                </td>
                <td><input type="number" class="table-input qty-input" placeholder="0"></td>
                <td><input type="number" class="table-input price-input" placeholder="0.00" step="0.01"></td>
                <td class="text-right total-cell">$0.00</td>
                <td><button class="btn-icon btn-icon--danger" onclick="removeLineItem(this)">üóëÔ∏è</button></td>
            `;
            tbody.appendChild(newRow);
            attachCalculationListeners(newRow);
        }

        function removeLineItem(btn) {
            if (confirm('Are you sure you want to remove this line item?')) {
                btn.closest('tr').remove();
                updateLineNumbers();
                calculateGrandTotal();
            }
        }

        function updateLineNumbers() {
            const rows = document.querySelectorAll('#line-items-tbody tr');
            rows.forEach((row, index) => {
                row.querySelector('td:first-child').textContent = index + 1;
            });
            lineItemCount = rows.length;
        }

        function attachCalculationListeners(row) {
            const qtyInput = row.querySelector('.qty-input');
            const priceInput = row.querySelector('.price-input');
            
            if (qtyInput && priceInput) {
                qtyInput.addEventListener('input', () => calculateLineTotal(row));
                priceInput.addEventListener('input', () => calculateLineTotal(row));
            }
        }

        function calculateLineTotal(row) {
            const qty = parseFloat(row.querySelector('.qty-input').value) || 0;
            const price = parseFloat(row.querySelector('.price-input').value) || 0;
            const total = qty * price;
            row.querySelector('.total-cell').textContent = `$${total.toFixed(2)}`;
            calculateGrandTotal();
        }

        function calculateGrandTotal() {
            let grandTotal = 0;
            document.querySelectorAll('.total-cell').forEach(cell => {
                const value = parseFloat(cell.textContent.replace('$', '')) || 0;
                grandTotal += value;
            });
            document.getElementById('grand-total').textContent = `$${grandTotal.toFixed(2)}`;
        }

        // Attach listeners to existing row
        document.querySelectorAll('#line-items-tbody tr').forEach(row => {
            attachCalculationListeners(row);
        });

        // Navigation functions
        function saveDraft() {
            alert('Draft saved successfully!');
            // Add actual save logic here
        }

        function goToPreviousTab() {
            window.location.href = 'tab-basic-information.html';
        }

        function goToNextTab() {
            window.location.href = 'tab-evaluation-award.html';
        }

        // Auto-save functionality
        let autoSaveTimer;
        document.querySelectorAll('input, select, textarea').forEach(field => {
            field.addEventListener('change', function() {
                clearTimeout(autoSaveTimer);
                document.querySelector('.auto-save-status').innerHTML = '<i class="status-icon">‚è≥</i> Saving...';
                autoSaveTimer = setTimeout(() => {
                    document.querySelector('.auto-save-status').innerHTML = '<i class="status-icon">‚úì</i> Auto-saved just now';
                }, 2000);
            });
        });

        // Progress calculation
        function updateProgress() {
            const totalFields = document.querySelectorAll('input, select, textarea').length;
            const filledFields = document.querySelectorAll('input:not(:placeholder-shown), select:not([value=""]), textarea:not(:placeholder-shown)').length;
            const percentage = Math.round((filledFields / totalFields) * 100);
            
            document.querySelector('.completion-progress').style.width = percentage + '%';
            document.querySelector('.completion-percentage').textContent = percentage + '%';
        }

        // Update progress on field changes
        document.querySelectorAll('input, select, textarea').forEach(field => {
            field.addEventListener('input', updateProgress);
            field.addEventListener('change', updateProgress);
        });
    </script>
</body>
</html>
