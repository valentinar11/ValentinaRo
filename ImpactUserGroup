    <script>
        function showView(viewId) {
            // Hide all views
            const views = document.querySelectorAll('.view');
            views.forEach(view => view.classList.remove('active'));
            
            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected view
            document.getElementById(viewId).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
        }

        // Add some interactivity to demonstrate the collaborative features
        document.addEventListener('DOMContentLoaded', function() {
            // Simulate real-time updates (optional enhancement)
            console.log('Technical Evaluation Visualization loaded');
            console.log('Features: System automation, multi-evaluator collaboration, clarification management');
        });
    </script>
